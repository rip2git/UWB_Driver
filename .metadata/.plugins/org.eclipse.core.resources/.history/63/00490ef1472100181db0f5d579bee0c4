#ifndef USERPACK_H_
#define USERPACK_H_


//#define DEBUG_MODE
typedef unsigned char uint8;


struct UserPack {

	enum class COMMAND : uint8 {
		SetID = 1,
		Distance,
		Data
	};
	static const uint8 BROADCAST_ID = 0xFF;
	static const uint8 DATA_OFFSET = 3;

	COMMAND Command;
	uint8 DestinationID;
	uint8 TotalSize;
	uint8 *Data;

	unsigned int ToBytes(uint8 *buffer) const;
	void ToStruct(const uint8 *buffer);
#ifdef DEBUG_MODE
	void Print() const;
#endif
};



#endif /* USERPACK_H_ */
